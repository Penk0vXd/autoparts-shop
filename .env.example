# üå† DIVINE REQUEST-A-PART SYSTEM ENVIRONMENT
# Copy this file to .env.local and fill in your actual values

# üèõÔ∏è SUPABASE CONFIGURATION
# Your Supabase project URL (get from Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous/public key (safe for client-side, get from API settings)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (server-side only, KEEP SECRET! Get from API settings)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# üì¢ DISCORD WEBHOOK ORACLE
# Discord webhook URL for request notifications with interactive buttons
# Create in Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# ü§ñ HCAPTCHA ANTI-SPAM PROTECTION
# Get free keys from https://www.hcaptcha.com/
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=your-hcaptcha-site-key
HCAPTCHA_SECRET=your-hcaptcha-secret-key

# üîê ADMIN PANEL ACCESS
# Set to 'true' to enable admin interface at /admin/requests
# WARNING: Only enable in secure environments!
NEXT_PUBLIC_ADMIN_MODE=false

# üõ†Ô∏è ENVIRONMENT CONFIGURATION
# Set to 'development' for local dev, 'production' for live site
NODE_ENV=development

# üîó SITE CONFIGURATION  
# Your site's base URL (used for redirects and SEO)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

